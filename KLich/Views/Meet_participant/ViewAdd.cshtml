@model KLich.Meet_participant

@{
    ViewBag.Title = "Dodawanie";
}

<h2>Dodawanie</h2>
<h4>Dodaj nowego użytkownika do istniejącego wydarzenia</h4>



    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


<form method="post">

    <div class="form-group">
        <label class="control-label col-md-2">Imie</label>
        <div class="col-md-10">
            <input class="form-control" type="text" id="firstName" name="firstName" required/>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Nazwisko</label>
        <div class="col-md-10">
            <input class="form-control" type="text" id="sureName" name="sureName" />
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2">E-mail</label>
        <div class="col-md-10">
            <input class="form-control" type="email" id="Email" name="Email" required />
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2">Wydarzenie</label>
        <div class="col-md-10">
            @Html.DropDownList("Id_meet", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Id_meet, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Dodaj" class="btn btn-default" />
        </div>
    </div>


</form>

    <h1>@ViewBag.info</h1>
    <h1>@ViewBag.count</h1>
   


</div>



