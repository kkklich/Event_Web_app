@model IEnumerable<KLich.Meet>

@{
    ViewBag.Title = "Index";
}

<h2>Lista wydarzeń</h2>


<table class="table">
    <tr>
        <th>
            <p>Miejsce</p>            
        </th>
        <th>
            <p>Nazwa wydarzenia</p>
        </th>
        <th>
            <p>Data</p>
        </th>
        <th>
            <p>Liczba uczestników</p>
           
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Place)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Descript)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateEvent)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NumberOfParticipant)
    </td>
    
    <td>
        @Html.ActionLink("Dodaj", "Add_Participant_Meet","Meet_participant", new { id = item.Id_meet },new { }) |
        @Html.ActionLink("Edytuj", "Edit", new { id = item.Id_meet }) |
        @Html.ActionLink("Wyświetl uczestników", "Details", new { id = item.Id_meet }) |
        @Html.ActionLink("Usuń", "Delete", new { id = item.Id_meet })
    </td>
</tr>
}

</table>
